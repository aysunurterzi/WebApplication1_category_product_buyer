@using WebApplication2.Models.Entity
@model List<tablomüsteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
            {
<p>
    <b> Aranacak Müşteri Adı:</b> @Html.TextBox("p")
    <input type="submit" name="" value="Ara" />

</p>
            }



<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>


    </tr>
    <tbody>
        @foreach (var mst in Model)
        {
        <tr>
            <th>@mst.müsteriid</th>
            <td>@mst.müsteriad</td>
            <td>@mst.müsterisoyad</td>
            <td>@Html.ActionLink("SİL", "sil", new { id = mst.müsteriid }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istiyor musunuz')" })</td>
            <td><a href="/Musteri/MusteriGetir/@mst.müsteriid" class="btn btn-success">GÜNCELLE</a></td>

        </tr>
            }

    </tbody>


</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri Ekle</a>

