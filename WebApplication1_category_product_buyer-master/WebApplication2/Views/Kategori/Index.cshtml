@using WebApplication2.Models.Entity
@model List<tablokategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("Index", "Kategori", FormMethod.Get))
{
    <p>
        <b> Aranacak Kategori Adı:</b> @Html.TextBox("p")
        <input type="submit" name="" value="Ara" />

    </p>
}

    <table class="table table-bordered">
        <tr>
            <th>KATEGORİ ID</th>
            <th>KATEGORİ ADI</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
        <tbody>
            @foreach (var ktgr in Model)
            {
                <tr>
                    <th>@ktgr.kategoriid</th>
                    <td>@ktgr.kategoriad</td>
                    <td>@Html.ActionLink("SİL", "sil", new { id = ktgr.kategoriid }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istiyor musunuz')" })</td>
                    <td><a href="/Kategori/KategoriGetir/@ktgr.kategoriid" class="btn btn-success">GÜNCELLE</a></td>
                </tr>
            }

        </tbody>

    </table>
    <a href="/Kategori/Yenikategori/" class="btn btn-primary">Yeni Kategori Ekle</a>
