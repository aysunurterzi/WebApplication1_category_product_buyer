@using WebApplication2.Models.Entity
@model List<tabloürünler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


@using (Html.BeginForm("Index", "Ürün", FormMethod.Get))
{
    <p>
        <b> Aranacak Ürün Adı:</b> @Html.TextBox("p")
        <input type="submit" name="" value="Ara" />

    </p>
}


<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKASI</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
    </tr>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>@urn.ürünid</th>
                <td>@urn.ürünadi</td>
                <td>@urn.marka</td>
                <td>@urn.tablokategoriler.kategoriad</td>
                <td>@urn.fiyat</td>
                <td>@urn.stok</td>
                <td>
                    @Html.ActionLink("SİL", "sil", new { id = urn.ürünid }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istiyor musunuz')" })
                @*<a href="/Ürün/sil/@urn.ürünid" class="btn btn-danger">SİL</a>*@
            </td>
            <td><a href="/Ürün/UrunGetir/@urn.ürünid" class="btn btn-success">GÜNCELLE</a></td>

        </tr>
    }

    </tbody>


</table>
<a href="/Ürün/YeniÜrün/" class="btn btn-primary">Yeni Ürün Ekle</a>
